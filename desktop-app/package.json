{
  "name": "client",
  "version": "0.0.1",
  "main": "bootstrap.js",
  "scripts": {
    "preinstall": "npm prune && cd ../lib/js && npm install && cd ../../desktop-app",
    "postinstall": "jspm clean && jspm install && shx cp -n .env.sample .env && npm run init",
    "init": "ipfs init || exit 0",
    "start": "npm run build && run-p ipfs daemon",
    "daemon": "node -r dotenv/config bootstrap.js",
    "gui": "electron -r dotenv/config bootstrap.js --gui",
    "build": "npm run build:lib && npm run build:daemon && npm run build:gui",
    "build:lib": "babel ../lib/js/src -s -d ./lib",
    "build:daemon": "babel ./src -s -d ./build",
    "build:gui": "coffee -m -o ./build -c ./src/electron-main.coffee && jspm bundle \"./src/gui/app.coffee!\" ./build/gui/app.js",
    "clean": "shx rm -rf ./lib ./build && shx mkdir ./lib ./build",
    "rebuild": "npm run clean && npm run build",
    "watch": "gulp watch",
    "debugger": "node-inspector --web-port 8081",
    "dev:init": "run-p debugger",
    "dev:daemon": "npm run dev:init \"nodemon node\"",
    "dev:gui": "npm run dev:init \"nodemon electron -- --gui\"",
    "nodemon": "nodemon --config .nodemon.json --debug -r dotenv/config -r source-map-support/register bootstrap.js --dev -x",
    "lint": "eslint ./src ./bootstrap.js && coffeelint -q -f .coffeelint.json ./src",
    "test": "mocha",
    "cover": "istanbul cover _mocha --report lcovonly",
    "report": "cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "dependencies": {
    "babel-cli": "^6.7.7",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-async-to-module-method": "^6.8.0",
    "babel-preset-es2015-node6": "^0.3.0",
    "bluebird": "^3.4.1",
    "chokidar": "^1.6.0",
    "commander": "^2.9.0",
    "del": "^2.2.2",
    "dotenv": "^2.0.0",
    "electron": "^1.4.5",
    "express": "^4.14.0",
    "fbgraph": "^1.2.0",
    "googleapis": "^7.1.0",
    "idb-plus-blob-store": "^1.0.0",
    "ipfs-api": "^3.0.0",
    "menubar": "^5.1.0",
    "node-persist": "0.0.11",
    "open": "0.0.5",
    "readline": "^1.3.0",
    "recursive-readdir": "^2.0.0",
    "winston": "^2.2.0",
    "ws": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-spies": "^0.7.1",
    "coffee-script": "^1.10.0",
    "coffeelint": "^1.15.7",
    "coveralls": "^2.11.12",
    "eslint-plugin-import": "^1.9.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-changed": "^1.3.2",
    "gulp-changed-in-place": "^2.0.3",
    "gulp-coffee": "^2.3.2",
    "gulp-coffeelint": "^0.6.0",
    "gulp-eslint": "^2.0.0",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^1.2.4",
    "gulp-notify": "^2.2.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-spawn-mocha": "^3.1.0",
    "istanbul": "^0.4.5",
    "jspm": "^0.16.45",
    "mocha": "^2.5.3",
    "node-inspector": "^0.12.8",
    "nodemon": "^1.10.2",
    "npm-run-all": "^3.1.1",
    "run-sequence": "^1.2.2",
    "shelljs": "^0.7.4",
    "shx": "^0.1.2",
    "source-map-support": "^0.4.0",
    "yargs": "^5.0.0"
  },
  "jspm": {
    "configFile": "jspm.config.js",
    "dependencies": {
      "bootstrap": "github:twbs/bootstrap@^3.3.6",
      "coffee": "github:forresto/system-coffee@master",
      "css": "github:systemjs/plugin-css@^0.1.23",
      "events": "github:jspm/nodelibs-events@^0.1.0",
      "flux": "npm:flux@^2.0.3",
      "fs": "github:jspm/nodelibs-fs@^0.1.2",
      "glob": "npm:glob@^5.0.9",
      "jade": "github:johnsoftek/plugin-jade@^1.1.2",
      "jquery": "npm:jquery@2",
      "md5": "npm:md5@^2.2.1",
      "node-dir": "npm:node-dir@^0.1.8",
      "query-string": "npm:query-string@^4.2.3"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    },
    "buildConfig": {
      "transpileES6": true,
      "minify": true
    }
  }
}
