{
  "name": "client",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "preinstall": "npm prune && npm --prefix ../lib/js install ../lib/js",
    "postinstall": "shx rm -f .env && shx cp -n .env.sample .env && ipfs init || true",
    "start": "npm run build && concurrently -k 'ipfs daemon' 'npm run daemon'",

    "daemon": "node -r dotenv/config bootstrap.js'",
    "gui": "electron -r dotenv/config bootstrap.js --gui'",

    "build": "npm run build:lib && npm run build:daemon && npm run build:gui",
    "build:lib": "babel ../lib/js/src -s -d ./lib",
    "build:daemon": "babel ./src -s -d ./build",
    "build:gui": "coffee -o ./build -c ./src",
    "clean": "shx rm -rf ./lib ./build && shx mkdir ./lib ./build",
    "rebuild": "npm run clean && npm run build",

    "dev": "concurrently -r -k 'ipfs daemon' 'npm run watch:lib' 'npm run watch:daemon' 'gulp watch:lint' 'npm run debug'",
    "debug": "node-inspector --web-port 8081",
    "watch:lib": "babel ../lib/js/src -s -d ./lib -w",
    "watch:daemon": "nodemon bootstrap.js --debug --watch ./src --watch ../lib/js/src --exec 'node -r dotenv/config'",

    "mock-server": "nodemon test/mock/server.js --watch test/mock --exec 'node -r dotenv/config -r babel-register'",

    "lint": "eslint ./src ./bootstrap.js || true",
    "test": "npm run build && npm run bdd",
    "bdd": "mocha --compilers coffee:coffee-script/register --require source-map-support/register --require dotenv/config"

  },
  "dependencies": {
    "babel-cli": "^6.7.7",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-async-to-module-method": "^6.8.0",
    "babel-plugin-transform-promise-to-bluebird": "^1.1.0",
    "babel-preset-es2015-node6": "^0.3.0",
    "bluebird": "^3.4.1",
    "chokidar": "^1.6.0",
    "commander": "^2.9.0",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "fbgraph": "^1.2.0",
    "googleapis": "^7.1.0",
    "idb-plus-blob-store": "^1.0.0",
    "ipfs-api": "^3.0.0",
    "node-persist": "0.0.11",
    "open": "0.0.5",
    "readline": "^1.3.0",
    "recursive-readdir": "^2.0.0",
    "rimraf": "^2.5.3",
    "winston": "^2.2.0",
    "ws": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coffee-script": "^1.10.0",
    "concurrently": "^2.1.0",
    "eslint-plugin-import": "^1.9.2",
    "gulp": "^3.9.1",
    "gulp-eslint": "^2.0.0",
    "mocha": "^2.5.3",
    "node-inspector": "^0.12.8",
    "nodemon": "^1.9.2",
    "shx": "^0.1.2",
    "source-map-support": "^0.4.0"
  }
}
